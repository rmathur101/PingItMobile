# -*- coding: utf-8 -*-
$:.unshift("/Library/RubyMotion/lib")
require 'motion/project/template/ios'
require 'motion/project'
require 'motion-cocoapods'
require 'bubble-wrap'
require 'bubble-wrap-http'
require 'bubble-wrap/location'
require 'formotion'
require 'teacup'

begin
  require 'bundler'
  Bundler.require
rescue LoadError
end

Motion::Project::App.setup do |app|
  # Use `rake config' to see complete project settings.
  app.name = 'PingItMobile'
  app.frameworks += %w{ AdSupport Accounts Social }
    app.weak_frameworks += %w{ AdSupport Accounts Social }
    app.pods do
      pod 'Facebook-iOS-SDK', '~> 3.1.1'
      pod 'Google-Maps-iOS-SDK', '~> 1.0.2'
    end

    app.info_plist['FacebookAppID'] = '764749046879221'
    app.info_plist['URL types'] = { 'URL Schemes' => 'fb764749046879221'}
    app.interface_orientations = [:portrait]
end

